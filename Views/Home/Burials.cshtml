
@model BurialSummaryViewModel
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <!-- filter form side menu -->
            <form id="filter-form">
                <h4>Filter Burials</h4>
                <label for="textile-color">Textile Color:</label>
                <input type="text" id="textile-color" name="textile-color">

                <label for="textile-structure">Textile Structure:</label>
                <input type="text" id="textile-structure" name="textile-structure"><br /><br />

                <label for="sex">Sex:</label>
                <select id="sex" name="sex">
                    <option value="">--Select--</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
                <br />
                <label for="burial-depth">Burial Depth:</label>
                <input type="number" id="burial-depth" name="burial-depth">

                <label for="estimated-stature">Estimated Stature:</label>
                <input type="number" id="estimated-stature" name="estimated-stature">

                <label for="age-at-death">Age at Death:</label>
                <input type="number" id="age-at-death" name="age-at-death">

                <label for="head-direction">Head Direction:</label>
                <input type="text" id="head-direction" name="head-direction">

                <label for="burial-id">Burial ID:</label>
                <input type="text" id="burial-id" name="burial-id">

                <label for="textile-function">Textile Function:</label>
                <input type="text" id="textile-function" name="textile-function">

                <label for="hair-color">Hair Color:</label>
                <input type="text" id="hair-color" name="hair-color">
                <br /><br />
                <button type="submit">Filter</button>
            </form>
        </div>
        <div class="col-md-9">
            <!-- burial summary list -->
            @foreach (Burialmain p in Model.Burials)
            {
                <partial name="BurialSummary" model="p" />
            }
        </div>
    </div>
</div>

<div page-model="@Model.PageInfo" page-action="Burials" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
