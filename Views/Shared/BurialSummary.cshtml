

@model Burialmain
<div class="card card-outline-primary m-1 p-1">

    @if (!string.IsNullOrEmpty(Model.Fieldbookexcavationyear))
    {
        <div class="bg-light p-1">
            <span class="badge bg-info" style="float:right">
                Year: @Model.Fieldbookexcavationyear.Substring(0, 4)
            </span>
        </div>
    }


    <ul>
        <li>Burial Number: @Model.Burialnumber</li>
        <li>North South: @Model.Squarenorthsouth</li>
        <li>Sex: @Model.Sex</li>
        <li>Age at Death: @Model.Ageatdeath </li>
    </ul>

        <span class="card-text">
            <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-lg float-end">Edit</a>
            <a asp-controller="Home" asp-action="DeleteBurial" asp-route-id="@Model.Id" class="btn btn-danger btn-lg float-end">Delete</a>
            <a asp-controller="Home" asp-action="IndividualBurial" asp-route-id="@Model.Id" class="btn btn-info btn-lg float-end">View Record</a>
        </span>

</div>


